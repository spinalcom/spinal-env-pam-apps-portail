{
  "compilerOptions": {
    "target": "es2015",
    // "composite": true,
    "module": "CommonJS",
    "experimentalDecorators": true,
    // "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["vite.config.ts", "src/**/*.ts", "*.ts"],
  "vueCompilerOptions": {
    "experimentalCompatMode": 2,
    "experimentalTemplateCompilerOptions": {
      "compatConfig": {
        "MODE": 2
      }
    }
  }
}
